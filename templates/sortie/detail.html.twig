{% extends 'base.html.twig' %}

{% block title %} {{ parent() }}| details {% endblock %}

{% block body %}

    <h2> Afficher la sortie: {{ sortie.nom }}</h2>
    <article class="detail-sortie">
    <div>
       Nom de la sortie: {{ sortie.nom }}
    </div>
        <div>
            Date et heure de la sortie:  {{ sortie.dateHeureDebut | date ("d/m/Y à H:i")}}
        </div>
        <div>
            Date limite d'inscription {{ sortie.dateLimiteInscription|date ('d/m/Y') }}
        </div>
        <div>
           Nombre de places {{ sortie.nbParticipantMax }}
        </div>
        <div>
            Durée: {{ sortie.duree }}  minutes
        </div>
        <div>
            Description et infos: {{ sortie.infoSortie }}
        </div>

    </article>

    <article class="detail-sortie">

        <div>
           Campus: {{ sortie.campusOrganisateur.nom }}
        </div>
        <div>
           Lieu: {{ sortie.lieu.nom }}
        </div>
        <div>
            Rue: {{ sortie.lieu.rue }}
        </div>
        <div>
            Code Postal:{{ sortie.lieu.ville.codePostal }}
        </div>
        <div>
            Latitude: {{ sortie.lieu.latitude }}
        </div> <div>
            Longitude: {{ sortie.lieu.longitude}}
        </div>

    </article>

    <article>
        <h3>Liste des particitants inscrits:</h3>

       <div>
        {% for inscription in sortie.inscriptions %}
            <div>
                Nom {{  inscription.participants.prenom ~' '~ inscription.participants.nom  }}

            </div>
               {% endfor %}

       </div>
    </article>

   <button> <a href="{{ path('sortie_list') }}" title="retour">Retour</a></button>
{% endblock %}

