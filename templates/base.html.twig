            <ul>

                <il> <a href="/" title="Home">Accueil</a> </il>
                <il> <a href="#"title="Ville">Villes</a> </il>
                <il> <a href="#" title="Campus">Campus</a> </il>
                <il> <a href="profil" title="profil">Mon profil</a> </il>
