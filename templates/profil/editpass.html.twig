{% extends 'base.html.twig' %}

{% block body %}
<center>
    <h1>Modifier le mot de passe de {{ app.user.prenom }} {{ app.user.nom }}</h1>

    <div>
   <form method="post">
       <div class="form-2">
           <label for="pass">Mot de passe</label>
           <input type="password" id="pass" name="pass" class="form-control rounded-1">
       </div>
       <div class="form-2">
           <label for="pass2">Confirmer le mot de passe</label>
           <input type="password" id="pass2" name="pass2" class="form-control rounded-1">
       </div>
        <div><button class="btn blue rounded-1">Valider</button></div>
       <br>
       <div><a class="btn blue rounded-1" href="{{ path('profil') }}" >Annuler</a></div>

   </form>
    </div>
</center>
{% endblock %}